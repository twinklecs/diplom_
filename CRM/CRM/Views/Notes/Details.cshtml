@model CRM.Models.Note

@{
    ViewData["Title"] = "Details";
}

    <meta charset="utf-8">

<h1>Подробности</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Содержание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            Контакт
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Contacts" asp-action="Details" asp-route-id="@Model.ContactId">@Html.DisplayFor(model => model.ContactId) @ViewBag.data[Convert.ToInt32(Model.ContactId)]</a>

        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.UserId != ViewBag.UserId)
            {
                <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId">@Html.DisplayFor(model => model.UserId) @ViewBag.data2[Convert.ToInt32(Model.UserId)]</a>
            } else
            {
                <a asp-controller="Accounts" asp-action="Details">@Html.DisplayFor(model => model.UserId) @ViewBag.data2[Convert.ToInt32(Model.UserId)]</a>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Model.UserId == ViewBag.UserId)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Вернуться к списку заметок</a>
</div>
