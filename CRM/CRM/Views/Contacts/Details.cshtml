@model CRM.Models.Contact

@{
    ViewData["Title"] = "Details";

}
    <meta charset="utf-8">

<h1></h1>

<div>
    <h4>Контакт</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FIO)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Область
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region)
        </dd>
        <dt class="col-sm-2">
            Город
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>

        
    </dl>
</div>
<div>
    @if (Model.Id == ViewBag.Id)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Вернуться к списку контактов</a>
</div>
